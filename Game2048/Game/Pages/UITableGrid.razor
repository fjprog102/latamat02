@page "/Game"
@using Controllers

<table class="grid-container-table">
    @for(int i = 0; i < game?.grid?.Rows; i++)
    {
        <tr class="tr">
            @for(int j = 0; j < game.grid.Columns; j++)
            {
                <td class="td">
                <div class="tile">
                        @game.grid.Cells[i,j]
                </div>
                </td>
            }
        </tr>
    }
</table>

@code {
    [Parameter]
    public Game2048? game { get; set; }
}