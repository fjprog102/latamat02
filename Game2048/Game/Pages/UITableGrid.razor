@page "/Game"
@using Models


<table class="grid-container-table">
    @for(int i = 0; i < grid.Rows; i++)
    {
        <tr class="tr">
            @for(int j = 0; j < grid.Columns; j++)
            {
                <td class="td">
                <div class="tile">@grid.Cells[i,j]</div>
                </td>
            }
        </tr>
    }
</table>

@code {
    Grid grid = new Grid(4, 4);
}